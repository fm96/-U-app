<view class="container"><view class="top"><block wx:for="{{cartlist}}" wx:for-item="item" wx:for-index="index" wx:key="*this"><view class="content"><scroll-view class="scroll-view_H" scroll-x="true" scroll-left="0"><view class="cartInfo" id="demo1"><view class="cartInfochild"><view class="cartInfo_switch common"><switch type="checkbox" checked="{{item.checked==1?true:false}}" data-num="{{item.num}}" data-id="{{item.id}}" data-event-opts="{{[['change',[['changeCheck',['$event']]]]]}}" bindchange="__e"></switch></view><view class="cartInfo_image common"><image src="{{imgUrl+item.img}}" mode="aspectFill"></image></view><view class="cartInfo_info"><label style="font-size:26rpx;" for>{{item.goodsname}}</label><label style="font-size:24rpx;color:#ccc;" for>规格：黑色</label><label style="color:red;" for>{{"￥"+item.price*item.num}}</label></view><view class="cartInfo_num"><view class="cartInfo_num_child"><label for data-num="{{item.num}}" data-check="{{item.checked}}" data-id="{{item.id}}" data-event-opts="{{[['tap',[['reduce',['$event']]]]]}}" bindtap="__e">-</label><label for>{{item.num}}</label><label for data-num="{{item.num}}" data-check="{{item.checked}}" data-id="{{item.id}}" data-event-opts="{{[['tap',[['add',['$event']]]]]}}" bindtap="__e">+</label></view></view></view></view><view class="cartDel" id="{{item.id}}" data-event-opts="{{[['tap',[['del',['$event']]]]]}}" bindtap="__e"><label for>删除</label></view></scroll-view></view></block></view><block wx:if="{{cartlist.length>0}}"><view class="foot"><view class="footd1"><switch type="checkbox" checked="{{allchecked}}" data-event-opts="{{[['change',[['allchange',['$event']]]]]}}" bindchange="__e"></switch><label>全选</label></view><view class="footd2"><view class="footd2sp1">总计：<label style="color:red;">{{sum}}</label></view><label class="footd2sp2">不含运费，已优惠￥0.00</label></view><view data-event-opts="{{[['tap',[['toOrder',['$event']]]]]}}" class="footd3" bindtap="__e"><label>{{"去结算("+total+"件)"}}</label></view></view></block><block wx:if="{{cartlist.length==0}}"><view>购物车空空如也，赶快去加入购物车吧~~~~</view></block></view>